class Solution {

    /**
     * @param Integer[] $nums
     * @return Integer
     */
    function singleNumber($nums) {
        $size = count($nums);
        if($size<=1) return $nums[0];
        $array = [];
        for($i=0;$i<$size;$i++){
            $this->checkAndSet($array,$nums[$i]);
        }
        return array_search(1, $array); 
    }

    private function checkAndSet(&$array,$num){
        if (isset($array[$num])) {
            $array[$num]++;
        } else {
            $array[$num] = 1;
        }

    }

}
